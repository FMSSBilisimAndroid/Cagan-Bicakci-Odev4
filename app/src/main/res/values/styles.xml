<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="homeTextStyle">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">800</item>
    </style>

    <style name="homeBtnStyle">
        <item name="backgroundTint">@color/soft_purple</item>
        <item name="android:gravity">center</item>
        <item name="icon">@drawable/rocket</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">700</item>
        <item name="cornerRadius">50dp</item>
    </style>

</resources>